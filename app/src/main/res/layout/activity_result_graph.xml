<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundWhite"
    android:orientation="vertical"
    tools:context=".video">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:background="@color/BackgroundS"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/chart_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/ic_back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="Times New Roman"
            android:text="Chart"
            android:textColor="@color/backgroundWhite"
            android:textSize="22sp" />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/obtain_id"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="#5570EB"
        android:padding="25dp"
        android:text="obtain"

        android:layout_marginLeft="35dp"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total_id"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/obtain_id"
        android:background="#3A5AE8"
        android:padding="25dp"
        android:text="TotalMark"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold" />
</RelativeLayout>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>